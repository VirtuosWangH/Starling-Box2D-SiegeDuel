package editor.ui{		import flash.display.Sprite;	import flash.events.Event;	import flash.text.TextField;	import flash.text.TextFieldType;		import editor.events.CommonEvent;
		public class PropertiesPanel extends Sprite {				private var _sName:TextField;		private var _density:TextField;			    public function set enabled(val:Boolean):void{			if (val == false){				alpha= .8;				mouseChildren = false;				mouseEnabled  = false;			}else{				alpha = 1;				mouseChildren = true				mouseEnabled = true;			}		}		public function set shapeName(str:String):void{			_sName.text = str;		}		public function get shapeName():String{			return _sName.text;		}		public function set density(str:String):void{			_density.text = str;		}		public function get density():String{			return _density.text;		}		public function PropertiesPanel(){						graphics.lineStyle(0, 0x666666);			graphics.beginFill(0xCCCCCC);			graphics.drawRect(0,0,600, 100);						_sName = new TextField();			_sName.border = true;			_sName.background = true;			_sName.type = TextFieldType.INPUT;			_sName.multiline = false;			_sName.width = 100;			_sName.height = 20;			 			_sName.x = 10;			_sName.y = 30;			addChild(_sName);			_sName.addEventListener(Event.CHANGE, onNameChange);						_density = new TextField();			_density.border = true;			_density.background = true;			_density.type = TextFieldType.INPUT;			_density.multiline = false;			_density.width = 100;			_density.height = 20;			_density.addEventListener(Event.CHANGE, onDensityChange);			 			_density.x = 140;			_density.y = 30;			addChild(_density);			addEventListener(Event.ADDED_TO_STAGE, onAdded);			enabled = false;					}		private function onDensityChange(evt:Event):void{			 			dispatchEvent(new CommonEvent(CommonEvent.CHANGE_DENSITY));		}		private function onNameChange(evt:Event):void{			trace("change name:"+_sName.text);			dispatchEvent(new CommonEvent(CommonEvent.CHANGE_NAME));		}		private function onAdded(evt:Event):void{			x = 10;			y = stage.stageHeight - 110;			removeEventListener(Event.ADDED_TO_STAGE, onAdded);		}			}}